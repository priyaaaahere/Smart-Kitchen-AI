<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:strokeColor="#FFE0B2"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white"
    app:rippleColor="#FFF3E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#FFE0B2"
            android:src="@drawable/ic_inventory_box"
            android:contentDescription="Item Icon"
            app:tint="@color/orange_700" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4E342E" />

            <TextView
                android:id="@+id/itemQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 3 Kg"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="#6D4C41" />

            <TextView
                android:id="@+id/itemExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry: 22 Nov 2025"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:textStyle="italic"
                android:textColor="@color/orange_700" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_icon_button"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/orange_700"
            android:contentDescription="Delete" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
