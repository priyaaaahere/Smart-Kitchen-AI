<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- soft gradient background -->
    <gradient
        android:startColor="#f2efe0"
        android:endColor="#EBC6A8"
        android:angle="270" />

    <!-- top border stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="#DDB892" />

    <!-- rounded top corners -->
    <corners android:topLeftRadius="24dp"
        android:topRightRadius="24dp" />

    <padding
        android:top="8dp"
        android:bottom="8dp" />
</shape>
